@model IEnumerable<Kasa>

<nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
    <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
        <a class="navbar-brand brand-logo" href="/Home"><img src="~/img/logo.png" alt="logo" /></a>
        <a class="navbar-brand brand-logo-mini" href="/Home"><img src="~/img/logo-mini.png" alt="logo" /></a>
        <button class="navbar-toggler navbar-toggler align-self-center d-none d-lg-flex" type="button" data-toggle="minimize">
            <span class="typcn typcn-th-menu"></span>
        </button>
    </div>
    <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
        <ul class="navbar-nav mr-lg-2">
            <li class="nav-item  d-none d-lg-flex">
                <a class="nav-link" href="/Doviz">
                    1 $ = @ViewBag.dolar ₺
                </a>
            </li>
            <li class="nav-item  d-none d-lg-flex">
                <a class="nav-link" href="/Doviz">
                    1 € = @ViewBag.euro ₺
                </a>
            </li>
        </ul>
        <ul class="navbar-nav navbar-nav-right">
            <li class="nav-item dropdown  d-flex">
                <a class="nav-link count-indicator dropdown-toggle d-flex align-items-center justify-content-center" id="notificationDropdown" href="#" data-toggle="dropdown">
                    <i class="typcn typcn-bell mr-0"></i>
                    <span class="count bg-danger">@Model.Count()</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
                    <p class="mb-0 font-weight-normal float-left dropdown-header">Yaklaşan Borçlar</p>
                    @foreach (var item in Model)
                    {
                    <div class="dropdown-item preview-item">
                         <button class="btn btn-primary btn-sm" data-toggle="ajax-modal" data-target="#odeBorcModal" data-url="@Url.Action($"BorcOde/{item.KasaId}")">
                            ÖDE
                        </button>
                        <div class="preview-item-content">
                            <h6 class="preview-subject font-weight-normal">@item.KasaTarih.ToString("dd.MM.yyyy") <span class="text-danger">@item.Kat.KatAdi</span> </h6>
                            <p class="font-weight-light small-text mb-0">
                                @item.KasaAciklama
                                @item.KasaTutar.ToString("###0.00") ₺
                            </p>
                        </div>
                    </div>
                    }
                </div>
            </li>
            <li class="nav-item nav-profile dropdown">
                <a class="nav-link dropdown-toggle  pl-0 pr-0" href="#" data-toggle="dropdown" id="profileDropdown">
                    <i class="typcn typcn-user-outline mr-0"></i>
                    <span class="nav-profile-name">@ViewBag.KisiAdi @ViewBag.KisiSoyad</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
                    <a class="dropdown-item" asp-controller="Uye" asp-action="Index">
                        <i class="typcn typcn-cog text-primary"></i>
                        Profil
                    </a>
                    <a class="dropdown-item" asp-controller="Login" asp-action="Logout">
                        <i class="typcn typcn-power text-primary"></i>
                        Çıkış
                    </a>
                </div>
            </li>
        </ul>
        <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
            <span class="typcn typcn-th-menu"></span>
        </button>
    </div>
</nav>
