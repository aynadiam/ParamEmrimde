                                    <i class="typcn typcn-plus btn-icon-prepend"></i>
                                    Ekle
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="card-body">
                            <h4 class="card-title text-primary">Borç</h4>
                            <p class="display-5 text-primary">
                                @((ViewBag.Borc).ToString("#,##0.00")) ₺
