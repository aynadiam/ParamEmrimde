@model Kasa

<div class="modal fade" id="borcTekrarModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><strong class="text-primary">Yeni Borç Ekle</strong></h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <form asp-action="BorcTekrar">
                    <div class="form-group">
                        <input asp-for="KasaTarih" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input asp-for="KasaTutar" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input asp-for="KasaAciklama" class="form-control" />
                    </div>
                    <div class="form-group">
                        <select asp-for="KatId" class="form-control form-white" asp-items="ViewBag.KatGelir" required>
                            <option value="">--Lütfen Borç Kategorisi Seçiniz--</option>
                        </select>
                        <span asp-validation-for="KatId" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal">Vazgeç</button>
                <button type="button" class="btn btn-primary" data-save="modal">Ekle</button>
            </div>
        </div>
    </div>
</div>