@model List<Kalem>

@{
    ViewData["Title"] = "Kalemler";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">@ViewData["Title"]</strong>
                    </div>
                    <div class="card-body">
                        <table id="example" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Adı</th>
                                    <th>Düzenle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.KalemId</td>
                                        <td>@item.KalemAdi</td>
                                        <td><a asp-controller="Kalem" asp-action="Duzenle" asp-route-id="@item.KalemId"><i class="fa fa-edit"></i></a></td>
                                        <td><a asp-controller="Kalem" asp-action="Sil" asp-route-id="@item.KalemId"><i class="fa fa-remove"></i></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->
